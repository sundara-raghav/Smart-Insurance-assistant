@page
@model SmartInsuranceWeb.Pages.User.DashboardModel
@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-4">
    <h2>Welcome, @Model.CurrentUser?.Name!</h2>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">My Policies</h5>
                    <p class="card-text display-4">@Model.PurchasedPolicies.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">My Claims</h5>
                    <p class="card-text display-4">@Model.MyClaims.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Pending Claims</h5>
                    <p class="card-text display-4">@Model.MyClaims.Count(c => c.Status == "Pending")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Recommended Policies for You</h4>
            <div class="list-group">
                @foreach (var policy in Model.RecommendedPolicies)
                {
                    <div class="list-group-item">
                        <h5>@policy.Name</h5>
                        <p class="mb-1">@policy.Description</p>
                        <small>Premium: $@policy.BasePremium/month | Coverage: $@policy.CoverageAmount</small>
                        <br />
                        <a asp-page="/User/Policies" class="btn btn-sm btn-primary mt-2">View Details</a>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-6">
            <h4>Recent Claims</h4>
            @if (Model.MyClaims.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Claim Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Filed Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.MyClaims.Take(5))
                        {
                            <tr>
                                <td>@claim.ClaimType</td>
                                <td>$@claim.ClaimAmount</td>
                                <td>
                                    <span class="badge bg-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning")">
                                        @claim.Status
                                    </span>
                                </td>
                                <td>@claim.FiledDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No claims filed yet.</p>
            }
        </div>
    </div>
</div>
